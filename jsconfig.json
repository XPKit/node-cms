{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "paths": {
      "@/*": ["src/*", "lib/*"],
      "@s/*": ["src/services/*"],
      "@c/*": ["src/components/*"],
      "@v/*": ["src/views/*"],
      "@f/*": ["src/filters/*"],
      "@u/*": ["src/utils/*"],
      "@l/*": ["src/lib/*"],
      "@r/*": ["src/router/*"],
      "@m/*": ["src/mixins/*"],
      "@a/*": ["src/assets/*"],
      "@static/*": ["src/static/*"],
      "@p/*": ["src/plugins/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*.js", "**/*.d.ts", "types/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
