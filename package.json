{
  "name": "node-cms",
  "version": "2.2.3",
  "description": "Content management system, written in node.js, uses leveldb as an asset and content store.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "del-cli --force ./src/plugins && cross-env VITE_CJS_IGNORE_WARNING=true vite",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview",
    "serve-backend": "cross-env VITE_DEV_MODE=true node --inspect --no-deprecation server.js",
    "lint": "eslint --fix lib src",
    "knip": "knip",
    "knip-lint": "knip && npm run lint",
    "test": "node --inspect --no-deprecation test/server.js",
    "old-tests": "mocha --exit -R spec -b -t 40000 old_tests/spec.js",
    "unit": "mocha -R spec -b -w -t 10000 test/unit",
    "mongodb": "ulimit -n 1000 && mongod --ipv6 --dbpath=../node-cms-mongodb-data",
    "mongodb-auth": "ulimit -n 1000 && mongod --tlsMode requireTLS --tlsCertificateKeyFile ./ssl/server.pem --tlsCAFile ./ssl/ca.pem --bind_ip localhost --dbpath=../node-cms-mongodb-data",
    "postinstall": "node postinstall.js",
    "install-tf": "npm i file:./tf"
  },
  "engines": {
    "node": "^22"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:XPKit/node-cms.git"
  },
  "keywords": [
    "cms",
    "node.js",
    "express",
    "leveldb",
    "mongodb"
  ],
  "pkg": {
    "assets": [
      "src/**/*"
    ]
  },
  "bin": {
    "cms": "./server.js",
    "cms-import": "./import.js",
    "cms-import-remote": "./importFromRemote.js"
  },
  "author": "Kong Yim <kong.yim@imagination.com>",
  "license": "ISC",
  "dependencies": {
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@e965/xlsx": "^0.20.3",
    "@json-editor/json-editor": "^2.10.1",
    "@mdi/font": "^7.1.96",
    "@tiptap/extension-link": "^2.2.1",
